                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/onyx" />

            <ImageButton
                android:id="@+id/goldCoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/CurrentPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/reserveBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/reserveSlot1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Res 1" />

            <Button
                android:id="@+id/reserveSlot2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Res 2" />

            <Button
                android:id="@+id/reserveSlot3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Res 3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/currentPlayerBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/currentPlayerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player Info" />

            <LinearLayout
                android:id="@+id/currentPlayerActions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buyAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buy Card" />

                <Button
                    android:id="@+id/reserveAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reserve Card" />

                <Button
                    android:id="@+id/returnCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Return Coins" />

                <Button
                    android:id="@+id/coinAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Take Coins" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exitGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quitButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="EXIT GAME" />

            <TextView
                android:id="@+id/CB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@color/green"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>